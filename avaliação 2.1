import java.util.Scanner;

public class ReajusteSalarial {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Solicita o salário-base
        System.out.print("Digite o salário-base do funcionário: R$ ");
        double salarioBase = scanner.nextDouble();

        // Solicita o percentual de aumento
        System.out.print("Digite o percentual de aumento (%): ");
        double percentualAumento = scanner.nextDouble();

        // Calcula o valor do aumento
        double aumento = salarioBase * (percentualAumento / 100);

        // Calcula o salário final com o reajuste
        double salarioFinal = salarioBase + aumento;

        // Exibe o salário final
        System.out.printf("O salário final com reajuste é: R$ %.2f\n", salarioFinal);

        scanner.close();
    }
